            <!-- Add template.properties as goobi_config.properties within goobi.war -->
            <plugin>
                <groupId>com.coderplus.maven.plugins</groupId>
                <artifactId>copy-rename-maven-plugin</artifactId>
                <version>1.0</version>
                <executions>
                    <execution>
                        <id>copy-and-rename-file</id>
                        <phase>compile</phase>
                        <goals>
                            <goal>rename</goal>
                        </goals>
                        <configuration>
                            <sourceFile>${project.build.directory}/classes/template.properties</sourceFile>
                            <destinationFile>${project.build.directory}/classes/goobi_config.properties
                            </destinationFile>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
